@page
@model MyBudgetPal.Pages.HomeModel
@{
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script type="text/javascript" src="jscript/graph.js"></script>

<style type="text/css">
    .spanner {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        display: block;
        text-align: center;
        height: 300px;
        transform: translateY(-50%);
        z-index: 1000;
        visibility: hidden;
    }

    .overlay {
        position: fixed;
        width: 100%;
        height: 100%;
        visibility: hidden;
    }

    .loader,
    .loader:before,
    .loader:after {
        border-radius: 50%;
        width: 2.5em;
        height: 2.5em;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
        -webkit-animation: load7 1.8s infinite ease-in-out;
        animation: load7 1.8s infinite ease-in-out;
    }

    .loader {
        font-size: 10px;
        margin: 80px auto;
        position: relative;
        text-indent: -9999em;
        -webkit-transform: translateZ(0);
        -ms-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-animation-delay: -0.16s;
        animation-delay: -0.16s;
    }

        .loader:before,
        .loader:after {
            content: '';
            position: absolute;
            top: 0;
        }

        .loader:before {
            left: -3.5em;
            -webkit-animation-delay: -0.32s;
            animation-delay: -0.32s;
        }

        .loader:after {
            left: 3.5em;
        }

    @@-webkit-keyframes load7 {
        0%,
        80%,
        100% {
            box-shadow: 0 2.5em 0 -1.3em;
        }

        40% {
            box-shadow: 0 2.5em 0 0;
        }
    }

    @@keyframes load7 {
        0%,
        80%,
        100% {
            box-shadow: 0 2.5em 0 -1.3em;
        }

        40% {
            box-shadow: 0 2.5em 0 0;
        }
    }

    .show {
        visibility: visible;
    }

    .spanner, .overlay {
        opacity: 0;
        -webkit-transition: all 0.3s;
        -moz-transition: all 0.3s;
        transition: all 0.3s;
    }

        .spanner.show, .overlay.show {
            opacity: 1
        }
</style>

<div class="overlay"></div>
<div class="spanner">
    <div class="loader"></div>
    <p>Gathering your details... This won't take long.</p>
</div>

<div class="container-fluid" id="mainDiv" style="display: none;">

    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <h1 class="display-4">Welcome, Joseph.</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mx-auto">
                <p class="lead">Here's a snapshot of your expenses for your current cycle.</p>
            </div>
        </div>
    </div>
    <div class="container-fluid text-center">

        <div class="row">
            <div class="col-md-12 mx-auto">
                <p class="lead">You're currently on track to stay under budget. Great job!</p>
            </div>
        </div>
    </div>

    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="progress border" style="height: 30px;">
                    <div class="progress-bar bg-success" style="width:1.3%; height: 30px;">
                        0$
                    </div>
                    <div class="progress-bar bg-success" style="width:60%;height: 30px;">
                        785$
                    </div>
                    <div class="progress-bar bg-white text-black-50" style="width:38.7%;height: 30px;">
                        1200$
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mx-auto">
                <p class="lead">You have 415$ left to spend before the cycle restarts in 4 days.</p>
            </div>
        </div>
    </div>
    <hr />

    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <h1 class="display-4">Details of expenses</h1>
            </div>
        </div>
    </div>
    <br />
    <div class="container-fluid text-center">

        <div class="card-deck">
            <div class="card border-dark mb-3">
                <div class="card-header">
                    <h4>Spending analysis</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">You have <span class="font-weight-bold">4 days</span> remaining in your cycle with <span class="font-weight-bold">415$ left</span> to spend.</p>
                    <p class="card-text">Around this time, you would usually have around <span class="font-weight-bold">200$ remaining</span> in your budget.</p>
                    <p class="card-text text-success"><i class="fa fa-thumbs-up"></i> This means you're performing better this cycle. Keep it up!</p>
                </div>
            </div>
        </div>

        <div class="card-deck">
            <div class="card border-dark mb-3">
                <div class="card-header">
                    <h4>Total purchases</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">You've made a total of <span class="font-weight-bold">17 transactions</span> this cycle.</p>
                    <p class="card-text">You averaged <span class="font-weight-bold">1.3 transactions</span> a day.</p>
                    <p class="card-text text-success font-weight-bold"><i class="fa fa-arrow-down"></i> This average is a 10% decrease from last cycle.</p>
                    <p class="card-text text-danger font-weight-bold"><i class="fa fa-arrow-up"></i> The number of total transactions are 2 more from last cycle.</p>
                </div>
            </div>
            <div class="card border-dark mb-3">
                <div class="card-header">
                    <h4>Most expensive purchase</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Your costliest purchase was <span class="font-weight-bold">PS4 Console</span>, costing you 400$.</p>
                    <p class="card-text text-danger font-weight-bold"><i class="fa fa-arrow-up"></i> This purchase was a 250$ increase from last cycles.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <p class="lead">You can find more details and older expenses on the <a href="/ExpenseManager">expense manager</a>.</p>
            </div>
        </div>
    </div>

    <hr />

    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <h1 class="display-4">Cost per day</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mx-auto">
                <canvas id="myChart" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $("div.spanner").addClass("show");
        $("div.overlay").addClass("show");

        setTimeout(function () {
            $("div.spanner").hide();
            $("div.overlay").hide();

            $('#mainDiv').fadeIn(1100);

            new Chart(document.getElementById("myChart"), {
                type: 'line',
                data: {
                    labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                    datasets: [{
                        data: [150, 400, 85],
                        label: "This week",
                        borderColor: "#3e95cd",
                        fill: false
                    }, {
                        data: [15, 80, 150, 100, 200, 90, 75],
                        label: "Last week",
                        borderColor: "#8e5ea2",
                        fill: false
                    }
                    ]
                },
                options: {
                    title: {
                        display: false,
                    },
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }, 2000);
    });
</script>