<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBudgetPal</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
            crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="Stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>




    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="d-flex flex-grow-1">
                <span class="w-100 d-lg-none d-block"><!-- hidden spacer to center brand on mobile --></span>

                @{
                    if (Context.Request.Path.ToString().Contains("/Index") || Context.Request.Path.ToString().Equals("/") || Context.Request.Path.ToString().Contains("/Registration"))
                    {
                        <a class="navbar-brand d-none d-lg-inline-block" href="/Index">
                            <img src="~/logo.png" class="img-thumbnail" style="width: 50%;" />
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand d-none d-lg-inline-block" href="/Home">
                            <img src="~/logo.png" class="img-thumbnail" style="width: 50%;" />
                        </a>
                    }
                }

                <div class="w-100 text-right">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </div>
            <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
                @{
                    if (!Context.Request.Path.ToString().Contains("/Index") && !Context.Request.Path.ToString().Equals("/") && !Context.Request.Path.ToString().Contains("/Registration"))
                    {
                        <ul class="navbar-nav ml-auto flex-nowrap">
                            <li class="nav-item">
                                <a href="/Settings" class="nav-link m-2 menu-item btn btn-outline-secondary btn-sm"><i class="fa fa-cog"></i></a>
                            </li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="nav-link m-2 menu-item nav-active btn btn-outline-secondary btn-sm dropdown-toggle" data-toggle="dropdown">
                                        Expenses
                                    </button>
                                    <div class="dropdown-menu">
                                        <a href="/ExpenseManager" class="nav-link m-2 menu-item nav-active btn btn-outline-secondary btn-sm">Expense Manager</a>
                                        <a href="/RecurringExpenses" class="nav-link m-2 menu-item nav-active btn btn-outline-secondary btn-sm">Recurring Expenses</a>
                                    </div>

                                </div>
                            </li>
                            <li class="nav-item">
                                <a href="/Index" class="nav-link m-2 menu-item btn btn-outline-danger btn-sm">Logout</a>
                            </li>
                        </ul>
                    }
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - MyBudgetPal - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>*@

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
